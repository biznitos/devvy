<section class="py-14 md:py-32">
  <div class="max-w-4xl mx-auto px-6 md:px-12">
    <div class="text-center mb-16">
      <span class="tr text-xs font-medium uppercase tracking-[0.2em] text-neutral-400">Your Blog</span>
      <h1 class="tr mt-4 font-serif font-light text-4xl md:text-5xl tracking-tight text-neutral-900">Cleaning Tips & Insights</h1>
      <p class="tr mt-6 text-neutral-500 leading-relaxed">Expert advice for keeping your Bangkok home spotless</p>
    </div>

    {% posts type:"blog", limit:10, name:"blogs", order:"pubdate" %}
    {% if blogs.size > 0 %}
    <div class="space-y-10">
      {% for p in blogs %}
      <article class="group bg-white border border-neutral-200/60 rounded-none overflow-hidden transition-all duration-500 hover:shadow-[0_4px_20px_rgba(0,0,0,0.06)]">
        <div class="md:flex">
          {% if p.cover_image %}
          <div class="md:w-1/3 overflow-hidden">
            <img src="{{p.cover_image | resize: '400x300'}}" alt="{{p.title}}" class="w-full h-48 md:h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105">
          </div>
          {% endif %}
          <div class="p-8 md:p-10 {% if p.cover_image %}md:w-2/3{% endif %}">
            <p class="text-xs font-medium uppercase tracking-[0.15em] text-neutral-400">{{p.pubdate | date: '%B %d, %Y'}}</p>
            <h2 class="mt-3 font-serif text-xl font-normal text-neutral-900">
              <a href="{{p.permalink}}" class="hover:text-gold-500 transition-colors duration-300">{{p.title}}</a>
            </h2>
            <p class="mt-3 text-sm text-neutral-500 leading-relaxed">{{p.description | truncate: 160}}</p>
            <a href="{{p.permalink}}" class="tr mt-6 inline-flex items-center text-xs font-medium uppercase tracking-[0.2em] text-neutral-900 hover:text-gold-500 transition-colors duration-300 group/link">
              Read More
              <svg class="w-4 h-4 ml-2 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
            </a>
          </div>
        </div>
      </article>
      {% endfor %}
    </div>

    {% if blogs_total_pages > 1 %}
    <nav class="mt-12 flex justify-center" aria-label="Pagination">
      <span class="text-xs font-medium uppercase tracking-[0.15em] text-neutral-400">
        Page {{blogs_page_number}} of {{blogs_total_pages}}
      </span>
    </nav>
    {% endif %}

    {% else %}
    <p class="tr text-center text-neutral-400">No blog posts yet.</p>
    {% endif %}
  </div>
</section>
