<article class="py-14 md:py-32">
  <div class="max-w-4xl mx-auto px-6 md:px-12">
    <div class="w-8 h-px bg-gold-400 mb-6"></div>
    <h1 class="font-serif font-light text-4xl md:text-5xl tracking-tight text-neutral-900">{{post.title}}</h1>

    {% if post.description %}
    <p class="mt-6 text-lg text-neutral-500 leading-relaxed">{{post.description}}</p>
    {% endif %}

    {% if post.cover_image %}
    <img src="{{post.cover_image | resize: '1200x600'}}" alt="{{post.title}} - {{site.name}}" class="mt-12 w-full rounded-none">
    {% endif %}

    <div class="mt-12 prose prose-neutral max-w-none prose-headings:font-serif prose-headings:font-light prose-headings:tracking-tight prose-p:leading-relaxed prose-p:text-neutral-600">
      {{post.content}}
    </div>

    <section class="mt-20 bg-surface-100 border border-neutral-200/60 p-10 rounded-none text-center">
      <h2 class="tr font-serif font-light text-2xl tracking-tight text-neutral-900">Have Questions About Your Property?</h2>
      <p class="tr mt-3 text-neutral-500 text-sm">Your dedicated team is here to help.</p>
      <a href="/contact" class="tr mt-6 inline-block bg-gold-400 text-navy-600 text-xs font-medium uppercase tracking-[0.2em] px-10 py-4 rounded-none hover:bg-gold-300 transition-colors duration-300">Contact Your Team</a>
    </section>
  </div>
</article>
