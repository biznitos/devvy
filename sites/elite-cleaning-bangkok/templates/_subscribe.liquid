<form action="/api/subscribe" method="POST" class="flex flex-col sm:flex-row gap-3">
  <input type="hidden" name="return_url" value="/?subscribed=1">
  <input type="email" name="email" required placeholder="Your email"
         class="flex-1 border border-neutral-300 rounded-none px-5 py-3 text-sm font-light text-neutral-900 placeholder:text-neutral-400 focus:border-neutral-900 focus:outline-none transition-colors duration-300">
  <button type="submit" class="tr bg-gold-400 text-navy-600 text-xs font-medium uppercase tracking-[0.2em] px-8 py-3 rounded-none hover:bg-gold-300 transition-colors duration-300">Subscribe</button>
</form>
