{% posts type:"category", limit:4, name:"services", order:"alpha" %}
{% if services.size > 0 %}
<section class="py-24 md:py-32">
  <div class="max-w-5xl mx-auto px-6 md:px-12">
    <div class="text-center mb-16">
      <span class="tr text-xs font-medium uppercase tracking-[0.2em] text-neutral-400">What We Do</span>
