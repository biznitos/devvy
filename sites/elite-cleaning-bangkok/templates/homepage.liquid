          <p class="text-neutral-500 mt-3 text-sm leading-relaxed">{{p.description | truncate: 100}}</p>
          {% if p.price > 0 %}
          <p class="mt-4 font-medium text-gold-500">{{p.price | money: p.currency}} {{p.price_info}}</p>
          {% endif %}
        </div>
      </a>
