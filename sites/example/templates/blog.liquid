<section class="py-16">
  <div class="max-w-4xl mx-auto px-4">
    <h1 class="text-4xl font-bold text-center mb-8">Blog</h1>

    {% posts type:"blog", limit:10, name:"blogs", order:"pubdate" %}
    {% if blogs.size > 0 %}
    <div class="space-y-8">
      {% for p in blogs %}
      <article class="bg-white rounded-lg shadow overflow-hidden">
        <div class="md:flex">
          {% if p.cover_image %}
          <div class="md:w-1/3">
            <img src="{{p.cover_image | resize: '400x300'}}" alt="{{p.title}}" class="w-full h-48 md:h-full object-cover">
          </div>
          {% endif %}
          <div class="p-6 {% if p.cover_image %}md:w-2/3{% endif %}">
            <p class="text-sm text-gray-500">{{p.pubdate | date: '%B %d, %Y'}}</p>
            <h2 class="mt-2 text-xl font-bold">
              <a href="{{p.permalink}}" class="hover:text-blue-600">{{p.title}}</a>
            </h2>
            <p class="mt-2 text-gray-600">{{p.description | truncate: 160}}</p>
            <a href="{{p.permalink}}" class="mt-4 inline-block text-blue-600 hover:underline">Read More &rarr;</a>
          </div>
        </div>
      </article>
      {% endfor %}
    </div>

    {% if blogs_total_pages > 1 %}
    <nav class="mt-8 flex justify-center gap-4" aria-label="Pagination">
      <span class="py-2 px-4 text-gray-600">
        Page {{blogs_page_number}} of {{blogs_total_pages}}
      </span>
    </nav>
    {% endif %}

    {% else %}
    <p class="text-center text-gray-500">No blog posts yet.</p>
    {% endif %}
  </div>
</section>
