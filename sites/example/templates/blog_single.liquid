<nav class="bg-gray-100 py-3" aria-label="Breadcrumb">
  <div class="max-w-4xl mx-auto px-4">
    <ol class="flex items-center space-x-2 text-sm">
      <li><a href="/" class="text-gray-500 hover:text-gray-700">Home</a></li>
      <li class="text-gray-400">/</li>
      <li><a href="/blog" class="text-gray-500 hover:text-gray-700">Blog</a></li>
      <li class="text-gray-400">/</li>
      <li class="text-gray-900">{{post.title}}</li>
    </ol>
  </div>
</nav>

<article class="py-16">
  <div class="max-w-4xl mx-auto px-4">
    <header class="text-center mb-8">
      <p class="text-gray-500">{{post.pubdate | date: '%B %d, %Y'}}</p>
      <h1 class="mt-2 text-4xl font-bold">{{post.title}}</h1>
      <p class="mt-4 text-xl text-gray-600">{{post.description}}</p>
    </header>

    {% if post.cover_image %}
    <img src="{{post.cover_image | resize: '1200x600'}}" alt="{{post.title}}" class="w-full rounded-lg mb-8">
    {% endif %}

    <div class="prose max-w-none">
      {{post.content}}
    </div>

    {% posts type:"blog", limit:3, name:"related_posts", order:"pubdate" %}
    {% if related_posts.size > 0 %}
    <section class="mt-16 pt-8 border-t">
      <h2 class="text-2xl font-bold mb-6">Related Articles</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {% for r in related_posts %}
        {% if r.permalink != post.permalink %}
        <a href="{{r.permalink}}" class="block bg-gray-50 rounded-lg overflow-hidden hover:shadow-lg transition">
          {% if r.cover_image %}
          <img src="{{r.cover_image | resize: '400x200'}}" alt="{{r.title}}" class="w-full h-32 object-cover">
          {% endif %}
          <div class="p-4">
            <h3 class="font-bold">{{r.title}}</h3>
            <p class="text-sm text-gray-500 mt-1">{{r.pubdate | date: '%B %d, %Y'}}</p>
          </div>
        </a>
        {% endif %}
        {% endfor %}
      </div>
    </section>
    {% endif %}

    <section class="mt-16 bg-gray-50 p-8 rounded-lg text-center">
      <h2 class="text-2xl font-bold">Have Questions?</h2>
      <p class="mt-2 text-gray-600">Contact {{site.name}} today.</p>
      <a href="/contact" class="mt-4 inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-medium">Get in Touch</a>
    </section>
  </div>
</article>
