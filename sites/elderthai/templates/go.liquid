<!-- Hero -->
<section class="bg-sage-700 py-10">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h1 class="font-serif text-3xl md:text-4xl font-bold text-white tr">Get Trusted Elder Care at Home in Thailand</h1>
    <p class="text-sage-100 mt-3 tr">Get a personal care estimate based on your area and schedule, along with a sample daily care checklist for your case.</p>
  </div>
</section>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <!-- Form -->
    <div class="md:col-span-2">
      <div class="bg-white rounded-xl shadow-md border border-warm-200 overflow-hidden">
        <form method="POST" action="/api/lead/v1">
          <input type="hidden" name="title" value="Care evaluation request">
          <input type="hidden" name="type" value="request">
          <input type="hidden" name="subtype" value="care">
          <input type="hidden" name="return_url" value="/go/thanks">
          <input type="hidden" name="failure_url" value="/go">
          <input type="hidden" name="post_id" value="{{post.id}}">
          <input type="hidden" name="data[referer]" value="{{env.referer}}">
          <input type="hidden" name="utm_source" value="{{params.utm_source | default: 'web'}}">
          <input type="hidden" name="utm_campaign" value="{{params.utm_campaign}}">

          <!-- Care details -->
          <div class="p-6">
            <h2 class="font-serif text-lg font-semibold text-warm-900 border-l-4 border-sage-400 pl-3 tr">Care Details</h2>
            <div class="grid grid-cols-3 gap-4 mt-4">
              <div class="col-span-2">
                <label class="block text-sm font-medium text-warm-900 tr">Who needs care?</label>
                <select name="data[who]" class="mt-1 w-full border border-warm-300 bg-white rounded-lg px-3 py-2.5 text-sm text-warm-900 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors">
                  <option value="Me" class="tr">Me</option>
                  <option value="Relative" class="tr">A Relative</option>
                  <option value="Other" class="tr">Other</option>
                </select>
              </div>
              <div class="col-span-1">
                <label class="block text-sm font-medium text-warm-900 tr">Age</label>
                <select name="data[age]" class="mt-1 w-full border border-warm-300 bg-white rounded-lg px-3 py-2.5 text-sm text-warm-900 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors">
                  <option value="65+">65+</option>
                  <option value="55-65">55-65</option>
                  <option value="45-54">45-54</option>
                  <option value="30-45">30-45</option>
                </select>
              </div>
            </div>

            <label class="block text-sm font-medium text-warm-900 mt-4 tr">What is happening right now?</label>
            <textarea name="notes" rows="4" required class="mt-1 w-full border border-warm-300 bg-white rounded-lg px-3 py-2.5 text-sm text-warm-900 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors leading-relaxed"></textarea>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
              <div>
                <label class="block text-sm font-medium text-warm-900 tr">Where are you located?</label>
                <select name="data[location]" class="mt-1 w-full border border-warm-300 bg-white rounded-lg px-3 py-2.5 text-sm text-warm-900 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors">
                  <option value="Bangkok">Bangkok</option>
                  <option value="Samut Phrakan">Samut Phrakan</option>
                  <option value="Nonthaburi">Nonthaburi</option>
                  <option value="Pattaya">Pattaya</option>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium text-warm-900 tr">When do you need help?</label>
                <select name="data[timeline]" class="mt-1 w-full border border-warm-300 bg-white rounded-lg px-3 py-2.5 text-sm text-warm-900 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors">
                  <option value="In a week" class="tr">In a week</option>
                  <option value="In a month" class="tr">In a month</option>
                  <option value="Immediately" class="tr">Immediately</option>
                  <option value="Just planning" class="tr">Just planning</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Contact info -->
          <div class="border-t border-warm-200 p-6">
            <h2 class="font-serif text-lg font-semibold text-warm-900 border-l-4 border-sage-400 pl-3 tr">Your Information</h2>
            <div class="mt-4">
              <label class="block text-sm font-medium text-warm-900 tr">Your name</label>
              <input type="text" name="customer[name]" required class="mt-1 w-full border border-warm-300 bg-white rounded-lg px-3 py-2.5 text-sm text-warm-900 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors">
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
              <div>
                <label class="block text-sm font-medium text-warm-900 tr">Email</label>
                <input type="email" name="customer[email]" required class="mt-1 w-full border border-warm-300 bg-white rounded-lg px-3 py-2.5 text-sm text-warm-900 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors">
              </div>
              <div>
                <label class="block text-sm font-medium text-warm-900 tr">Phone Number</label>
                <input type="phone" name="customer[phone]" class="mt-1 w-full border border-warm-300 bg-white rounded-lg px-3 py-2.5 text-sm text-warm-900 focus:border-sage-500 focus:ring-2 focus:ring-sage-200 outline-none transition-colors">
              </div>
            </div>
          </div>

          <!-- Submit -->
          <div class="border-t border-warm-200 p-6 flex items-center justify-between bg-cream-100">
            <p class="text-xs text-warm-700 tr">Your information is completely private. We use it to prepare your estimate and schedule.</p>
            <button type="submit" class="flex-shrink-0 ml-4 bg-gold-500 hover:bg-gold-600 text-white px-6 py-2.5 rounded-lg font-semibold transition-colors btn-pulse tr">Request Pricing &rarr;</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="md:col-span-1">
      <div class="bg-cream-100 rounded-xl p-6 border border-cream-200 sticky top-24">
        <h3 class="font-serif font-semibold text-warm-800 tr">Why families in Bangkok choose ElderThai</h3>
        <ul class="mt-4 space-y-3 text-sm text-warm-900">
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-sage-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
            <span class="tr">Experienced caregivers</span>
          </li>
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-sage-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
            <span class="tr">Flexible hours</span>
          </li>
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-sage-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
            <span class="tr">Daily reporting</span>
          </li>
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-sage-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
            <span class="tr">Health-focused care</span>
          </li>
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-sage-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
            <span class="tr">Thai and English speaking staff</span>
          </li>
          <li class="flex items-start space-x-2">
            <svg class="w-5 h-5 text-sage-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
            <span class="tr">Same-day start available</span>
          </li>
        </ul>

        <!-- Contact info -->
        <div class="mt-6 pt-6 border-t border-cream-200">
          <h4 class="font-serif font-semibold text-warm-800 text-sm tr">Prefer to contact us directly?</h4>
          <ul class="mt-3 space-y-2 text-sm">
            <li>
              <a href="https://wa.me/66991273745" class="text-sage-600 hover:text-sage-700 inline-flex items-center space-x-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/><path d="M12 0C5.373 0 0 5.373 0 12c0 2.136.558 4.143 1.534 5.887L.058 23.71l5.99-1.57A11.94 11.94 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 21.82c-1.91 0-3.74-.508-5.34-1.47l-.382-.227-3.964 1.04 1.058-3.867-.25-.396A9.77 9.77 0 012.18 12 9.82 9.82 0 0112 2.18 9.82 9.82 0 0121.82 12 9.82 9.82 0 0112 21.82z"/></svg>
                <span class="tr">WhatsApp</span>
              </a>
            </li>
            <li>
              <a href="tel:{{site.phone}}" class="text-sage-600 hover:text-sage-700 inline-flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                <span>{{site.phone}}</span>
              </a>
            </li>
            <li>
              <a href="mailto:{{site.email}}" class="text-sage-600 hover:text-sage-700 inline-flex items-center space-x-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                <span>{{site.email}}</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
