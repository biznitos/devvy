<!-- Open Graph -->
<meta property="og:type" content="{% if post.type == 'blog' %}article{% elsif post.type == 'category' %}website{% else %}website{% endif %}">
<meta property="og:title" content="{{meta_title | default: site.name}}">
<meta property="og:description" content="{{meta_description | default: site.description}}">
<meta property="og:url" content="https://{{site.cname}}{{post.permalink | default: '/'}}">
<meta property="og:site_name" content="{{site.name}}">
<meta property="og:locale" content="en_TH">
{% if post.cover_image.size > 0 %}
<meta property="og:image" content="{{post.cover_image}}">
{% else %}
<meta property="og:image" content="https://s3.biznitos.com/curator/suploads/8d0c47d8-8163-42c9-b928-88e83b490124.jpeg">
{% endif %}
<meta property="og:image:width" content="800">
<meta property="og:image:height" content="600">

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{meta_title | default: site.name}}">
<meta name="twitter:description" content="{{meta_description | default: site.description}}">
{% if post.cover_image.size > 0 %}
<meta name="twitter:image" content="{{post.cover_image}}">
{% else %}
<meta name="twitter:image" content="https://s3.biznitos.com/curator/suploads/8d0c47d8-8163-42c9-b928-88e83b490124.jpeg">
{% endif %}

<!-- Geo Meta Tags -->
<meta name="geo.region" content="TH-10">
<meta name="geo.placename" content="{{site.city}}, {{site.region}}">
<meta name="geo.position" content="13.7150;100.5853">
<meta name="ICBM" content="13.7150, 100.5853">

<!-- Canonical -->
<link rel="canonical" href="https://{{site.cname}}{{post.permalink | default: '/'}}">

<!-- Additional SEO -->
<meta name="robots" content="index, follow">
<meta name="language" content="English">
<meta name="revisit-after" content="7 days">

<!-- BreadcrumbList JSON-LD (inner pages only) -->
{% if post.permalink.size > 0 %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://{{site.cname}}/"
    },
    {% if post.type == 'hospital' %}
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Hospitals",
      "item": "https://{{site.cname}}/hospitals"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "{{post.title | strip_html}}",
      "item": "https://{{site.cname}}{{post.permalink}}"
    }
    {% elsif post.type == 'category' %}
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://{{site.cname}}/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "{{post.title | strip_html}}",
      "item": "https://{{site.cname}}{{post.permalink}}"
    }
    {% else %}
    {
      "@type": "ListItem",
      "position": 2,
      "name": "{{post.title | strip_html}}",
      "item": "https://{{site.cname}}{{post.permalink}}"
    }
    {% endif %}
  ]
}
</script>
{% endif %}

<!-- Service JSON-LD (category/service pages) -->
{% if post.type == 'category' %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "{{post.title | strip_html}}",
  "description": "{{post.description | strip_html}}",
  "url": "https://{{site.cname}}{{post.permalink}}",
  "provider": {
    "@type": "LocalBusiness",
    "name": "{{site.name}}",
    "telephone": "{{site.phone}}",
    "email": "{{site.email}}",
    "url": "https://{{site.cname}}",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "{{site.city}}",
      "addressRegion": "{{site.region}}",
      "addressCountry": "TH"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "13.7150",
      "longitude": "100.5853"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": "Bangkok"
  },
  "serviceType": "{{post.title | strip_html}}"
}
</script>
{% endif %}

<!-- MedicalBusiness + Hospital JSON-LD (hospital pages) -->
{% if post.type == 'hospital' %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "MedicalBusiness",
  "name": "{{site.name}} — {{post.title | strip_html}}",
  "description": "{{post.description | strip_html}}",
  "url": "https://{{site.cname}}{{post.permalink}}",
  "provider": {
    "@type": "LocalBusiness",
    "name": "{{site.name}}",
    "telephone": "{{site.phone}}",
    "email": "{{site.email}}"
  },
  "areaServed": {
    "@type": "City",
    "name": "Bangkok"
  }
}
</script>
{% endif %}

<!-- Article JSON-LD (blog & page posts) -->
{% if post.type == 'page' or post.type == 'blog' %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "{{post.title | strip_html}}",
  "description": "{{post.description | strip_html}}",
  "url": "https://{{site.cname}}{{post.permalink}}",
  {% if post.cover_image.size > 0 %}
  "image": "{{post.cover_image}}",
  {% endif %}
  "datePublished": "{{post.pubdate}}",
  "author": {
    "@type": "Organization",
    "name": "{{site.name}}"
  },
  "publisher": {
    "@type": "Organization",
    "name": "{{site.name}}",
    "url": "https://{{site.cname}}"
  }
}
</script>
{% endif %}

<!-- Homepage FAQPage JSON-LD -->
{% if post.permalink == nil or post.permalink == '/' %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {"@type": "Question", "name": "Do you offer day, night, and live-in care?", "acceptedAnswer": {"@type": "Answer", "text": "Yes — you can choose flexible 4, 8, 12, or 24-hour blocks depending on your needs."}},
    {"@type": "Question", "name": "Is a nurse always present?", "acceptedAnswer": {"@type": "Answer", "text": "Our caregivers handle daily support, while our Nurse Coordinator designs each care plan and remains on call for supervision."}},
    {"@type": "Question", "name": "Can you accompany hospital visits?", "acceptedAnswer": {"@type": "Answer", "text": "Yes. We provide full hospital companion service including registration, translation, pharmacy pickup, and follow-up appointments."}},
    {"@type": "Question", "name": "Do you provide dementia care?", "acceptedAnswer": {"@type": "Answer", "text": "Yes, we have caregivers trained in dementia and Alzheimer's care who follow calm routines and safety protocols under nurse guidance."}},
    {"@type": "Question", "name": "What languages do caregivers speak?", "acceptedAnswer": {"@type": "Answer", "text": "All caregivers speak Thai and English. Other languages can be arranged upon request for international clients."}},
    {"@type": "Question", "name": "How do you screen caregivers?", "acceptedAnswer": {"@type": "Answer", "text": "Every caregiver undergoes ID verification, background checks, and reference reviews, followed by skill training with our Nurse Coordinator."}},
    {"@type": "Question", "name": "Can you manage medications?", "acceptedAnswer": {"@type": "Answer", "text": "Caregivers handle reminders and organization, while registered nurses perform injections or wound dressings as required."}},
    {"@type": "Question", "name": "How is pricing calculated?", "acceptedAnswer": {"@type": "Answer", "text": "Pricing depends on the service type and block length—4, 8, 12, or 24 hours. Transparent rates are available on each service page."}},
    {"@type": "Question", "name": "Do you serve condos and houses?", "acceptedAnswer": {"@type": "Answer", "text": "Yes. We provide care in both condos and homes across central Bangkok and nearby areas."}},
    {"@type": "Question", "name": "How fast can you start?", "acceptedAnswer": {"@type": "Answer", "text": "Most clients can begin within 24–48 hours after completing the nurse consultation and caregiver matching process."}}
  ]
}
</script>
{% endif %}
