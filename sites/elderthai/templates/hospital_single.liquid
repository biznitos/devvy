<!-- Hero -->
<section class="bg-sage-700 py-10 md:py-14">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h1 class="font-serif text-3xl md:text-5xl font-medium text-white">{{post.title}}</h1>
    <p class="text-sage-100 text-lg mt-3 max-w-2xl mx-auto">{{post.description}}</p>
    <div class="mt-6 text-sage-200">
      {% partial "_cta_buttons" %}
    </div>
  </div>
</section>

<!-- Specialties -->
{% if post.tags.size > 0 %}
<div class="bg-cream-100 border-b border-cream-200">
  <div class="max-w-4xl mx-auto px-4 py-4 text-center">
    <span class="font-semibold text-warm-800 text-sm mr-2 tr">Specialties:</span>
    {% assign tag_list = post.tags | split: ", " %}
    {% for tag in tag_list %}
    <span class="inline-block bg-sage-50 text-sage-700 text-xs px-3 py-1.5 rounded-full m-1 tr">{{tag}}</span>
    {% endfor %}
  </div>
</div>
{% endif %}

<!-- Highlight box -->
{% if post.meta2.size > 0 %}
<div class="max-w-4xl mx-auto px-4 mt-8">
  <div class="bg-cream-100 border border-cream-200 rounded-xl p-6">
    <div class="prose prose-sm max-w-none prose-headings:font-serif prose-headings:text-warm-800 text-warm-900">
      {{post.meta2 | markdown}}
    </div>
  </div>
</div>
{% endif %}

<!-- Content -->
<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="prose prose-lg max-w-none prose-headings:font-serif prose-headings:text-warm-800 prose-a:text-sage-600 text-warm-900">
    {{post.content | strip | replace: "\n\n", "</p><p>"}}
  </div>

  <!-- Info block -->
  <div class="mt-8 bg-cream-100 border border-cream-200 rounded-xl p-6">
    <div class="space-y-3 text-sm">
      <a href="/hospitals" class="text-sage-600 hover:text-sage-700 font-medium inline-flex items-center space-x-1">
        <span class="tr">&larr; More hospitals in Bangkok</span>
      </a>
      {% if post.address.size > 0 %}
      <div class="flex items-start space-x-2 text-warm-900">
        <svg class="w-5 h-5 text-sage-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
        <a href="https://www.google.com/maps/search/?api=1&query={{ post.title | replace: 'Escort and Post Hospital Care Service', '' | strip | uri_escape }}" target="_blank" class="text-sage-600 hover:text-sage-700">{{post.address}}</a>
      </div>
      {% endif %}
      {% if post.phone.size > 0 %}
      <div class="flex items-center space-x-2 text-warm-900">
        <svg class="w-5 h-5 text-sage-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
        <a href="tel:{{post.phone}}" class="text-sage-600 hover:text-sage-700">{{post.phone}}</a>
      </div>
      {% endif %}
    </div>
  </div>
</div>

{% partial "_cta" %}
