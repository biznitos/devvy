<!-- Hero -->
<section class="bg-sage-700 py-10">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <h1 class="font-serif text-3xl md:text-4xl font-bold text-white tr">Bangkok Top Private Hospitals</h1>
    <p class="text-sage-100 text-lg mt-3 max-w-2xl mx-auto tr">
      Need to go to the hospital in Bangkok?
      Elder Thai provides escort and translation services, and caregivers to take care of you after your hospital procedures.
    </p>
  </div>
</section>

<!-- Hospital cards -->
<section class="py-10">
  <div class="max-w-5xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for post in posts %}
      <a href="{{post.permalink}}" class="block bg-white rounded-xl p-6 shadow-sm border border-warm-100 hover:shadow-md hover:border-sage-200 transition-all group">
        <h2 class="font-serif text-lg font-semibold text-warm-800 group-hover:text-sage-700">{{post.title | replace: "Escort and Post Hospital Care Service", ""}}</h2>
        {% if post.tags.size > 0 %}
        <div class="mt-3 flex flex-wrap gap-1.5">
          {% assign tag_list = post.tags | split: ", " %}
          {% for tag in tag_list %}
            {% if forloop.index <= 3 %}
            <span class="bg-sage-50 text-sage-700 text-xs px-2.5 py-1 rounded-full tr">{{tag}}</span>
            {% endif %}
          {% endfor %}
        </div>
        {% endif %}
        <span class="inline-block mt-3 text-sage-600 text-sm font-medium group-hover:text-sage-700 tr">View details &rarr;</span>
      </a>
      {% endfor %}
    </div>
  </div>
</section>

{% partial "_cta" %}
