<!-- Hero -->
<section class="bg-sage-700 py-10">
  <div class="max-w-3xl mx-auto px-4 text-center">
    <h1 class="font-serif text-3xl md:text-4xl font-bold text-white">{{post.title}}</h1>
    {% if post.description.size > 0 %}
    <p class="text-sage-100 mt-3">{{post.description}}</p>
    {% endif %}
  </div>
</section>

<div class="max-w-3xl mx-auto px-4 py-10">
  <div class="prose prose-lg max-w-none prose-headings:font-serif prose-headings:text-warm-800 prose-a:text-sage-600 hover:prose-a:text-sage-700 text-warm-900">
    {{post.content}}
  </div>
  <div class="mt-8 text-center">
    <a href="/go?utm_source=page" class="inline-block bg-sage-600 hover:bg-sage-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors tr">REQUEST CARE</a>
    <p class="mt-2 text-xs text-warm-700 tr">We accept a few people each month. Reserve your spot now.</p>
  </div>
</div>

{% partial "_cta" %}
