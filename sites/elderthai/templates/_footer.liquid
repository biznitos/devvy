<footer class="bg-warm-900 text-warm-300 mt-16">
  <div class="max-w-5xl mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div>
        <span class="font-serif text-2xl font-bold text-white tr">Elder</span><span class="font-serif text-2xl font-light text-warm-400 tr">Thai</span>
        <p class="mt-3 text-sm leading-relaxed tr">In-home elder care in Bangkok for expats and Thai families. Bilingual caregivers, nurse-guided care plans.</p>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-serif text-white font-semibold mb-3 tr">Services</h4>
        <ul class="space-y-2 text-sm">
          {% for c in categories %}
          <li><a href="{{c.permalink}}" class="hover:text-white transition-colors tr">{{c.subtitle | default: c.title}}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Areas -->
      <div>
        <h4 class="font-serif text-white font-semibold mb-3 tr">Areas We Serve</h4>
        <ul class="space-y-2 text-sm">
          <li class="tr">Bangkok (All Districts)</li>
          <li class="tr">Nonthaburi</li>
          <li class="tr">Samut Prakan</li>
          <li class="tr">Pattaya</li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-serif text-white font-semibold mb-3 tr">Contact</h4>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="https://wa.me/66991273745" class="hover:text-white transition-colors inline-flex items-center space-x-2">
              <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/><path d="M12 0C5.373 0 0 5.373 0 12c0 2.136.558 4.143 1.534 5.887L.058 23.71l5.99-1.57A11.94 11.94 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 21.82c-1.91 0-3.74-.508-5.34-1.47l-.382-.227-3.964 1.04 1.058-3.867-.25-.396A9.77 9.77 0 012.18 12 9.82 9.82 0 0112 2.18 9.82 9.82 0 0121.82 12 9.82 9.82 0 0112 21.82z"/></svg>
              <span class="tr">WhatsApp</span>
            </a>
          </li>
          <li>
            <a href="tel:{{site.phone}}" class="hover:text-white transition-colors inline-flex items-center space-x-2">
              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
              <span>{{site.phone}}</span>
            </a>
          </li>
          <li>
            <a href="mailto:{{site.email}}" class="hover:text-white transition-colors inline-flex items-center space-x-2">
              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              <span>{{site.email}}</span>
            </a>
          </li>
          <li class="text-sm">{{site.address}}</li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-warm-800">
    <div class="max-w-5xl mx-auto px-4 py-4 text-center text-xs text-warm-500">
      &copy; {{year}} {{site.name}}. <span class="tr">A service of Biznitos Co., Ltd.</span> &middot; <a href="/apply" class="text-sage-400 hover:text-white font-medium transition-colors tr">Caregivers: Apply Here</a>
    </div>
  </div>

  <!-- JSON-LD LocalBusiness -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "{{site.name}}",
    "description": "{{site.description}}",
    "url": "https://{{site.cname}}",
    "telephone": "{{site.phone}}",
    "email": "{{site.email}}",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "{{site.city}}",
      "addressRegion": "{{site.region}}",
      "addressCountry": "TH"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "{{site.settings.geo.lat}}",
      "longitude": "{{site.settings.geo.lng}}"
    }
  }
  </script>
</footer>
