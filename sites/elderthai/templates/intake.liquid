<!-- Simple lead form replacing chatbot -->
<section class="bg-green-700 py-10">
  <div class="max-w-2xl mx-auto px-4 text-center">
    <h1 class="font-serif text-3xl md:text-4xl font-bold text-white tr">Get in Touch</h1>
    <p class="text-green-100 mt-3 tr">Let us help you choose the right elder care in Thailand and give you prices.</p>
  </div>
</section>

<div class="max-w-2xl mx-auto px-4 py-10">
  <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
    <!-- Form -->
    <div class="md:col-span-3">
      <div class="bg-white rounded-xl shadow-md border border-stone-200 overflow-hidden">
        <form method="POST" action="/api/lead/v1">
          <input type="hidden" name="title" value="Intake request">
          <input type="hidden" name="type" value="request">
          <input type="hidden" name="subtype" value="intake">
          <input type="hidden" name="return_url" value="/go/thanks">
          <input type="hidden" name="failure_url" value="/intake">
          <input type="hidden" name="utm_source" value="{{params.utm_source | default: 'intake'}}">
          <input type="hidden" name="utm_campaign" value="{{params.utm_campaign}}">

          <div class="p-6 space-y-4">
            <div>
              <label class="block text-sm font-medium text-stone-900 tr">Your name</label>
              <input type="text" name="customer[name]" required class="mt-1 w-full border border-stone-300 bg-white rounded-lg px-3 py-2.5 text-sm text-stone-900 focus:border-green-500 focus:ring-2 focus:ring-green-200 outline-none transition-colors">
            </div>
            <div>
              <label class="block text-sm font-medium text-stone-900 tr">Email</label>
              <input type="email" name="customer[email]" required class="mt-1 w-full border border-stone-300 bg-white rounded-lg px-3 py-2.5 text-sm text-stone-900 focus:border-green-500 focus:ring-2 focus:ring-green-200 outline-none transition-colors">
            </div>
            <div>
              <label class="block text-sm font-medium text-stone-900 tr">Phone / WhatsApp number</label>
              <input type="tel" name="customer[phone]" class="mt-1 w-full border border-stone-300 bg-white rounded-lg px-3 py-2.5 text-sm text-stone-900 focus:border-green-500 focus:ring-2 focus:ring-green-200 outline-none transition-colors">
            </div>
            <div>
              <label class="block text-sm font-medium text-stone-900 tr">How can we help?</label>
              <textarea name="notes" rows="4" required class="mt-1 w-full border border-stone-300 bg-white rounded-lg px-3 py-2.5 text-sm text-stone-900 focus:border-green-500 focus:ring-2 focus:ring-green-200 outline-none transition-colors leading-relaxed" placeholder="Tell us about your situation and what kind of care you're looking for..."></textarea>
            </div>
          </div>

          <div class="border-t border-stone-200 p-6 bg-orange-50">
            <button type="submit" class="w-full bg-amber-500 hover:bg-amber-600 text-white px-6 py-3 rounded-lg font-semibold transition-colors btn-pulse tr">Send Message &rarr;</button>
            <p class="mt-2 text-xs text-stone-500 text-center tr">Your information is completely private.</p>
          </div>
        </form>
      </div>
    </div>

    <!-- Contact sidebar -->
    <div class="md:col-span-2">
      <div class="bg-orange-50 rounded-xl p-6 border border-orange-100">
        <div class="flex items-center space-x-3 mb-4">
          <img src="https://s3.biznitos.com/cdn-cgi/image/gravity=auto,fit=cover,width=200,height=200/curator/suploads/c1f922f2-23e2-4aac-bb9f-ee2146c30683.png" class="rounded-full w-14 border-2 border-green-200 shadow-sm" alt="Elder Thai">
          <div>
            <p class="font-serif font-semibold text-stone-800">Elder Thai</p>
            <p class="text-xs text-stone-500 tr">We're here to help</p>
          </div>
        </div>

        <h3 class="font-serif font-semibold text-stone-800 text-sm tr">Contact Us Directly</h3>
        <ul class="mt-3 space-y-3 text-sm">
          <li>
            <a href="https://wa.me/66991273745" class="text-green-600 hover:text-green-700 font-medium inline-flex items-center space-x-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/><path d="M12 0C5.373 0 0 5.373 0 12c0 2.136.558 4.143 1.534 5.887L.058 23.71l5.99-1.57A11.94 11.94 0 0012 24c6.627 0 12-5.373 12-12S18.627 0 12 0zm0 21.82c-1.91 0-3.74-.508-5.34-1.47l-.382-.227-3.964 1.04 1.058-3.867-.25-.396A9.77 9.77 0 012.18 12 9.82 9.82 0 0112 2.18 9.82 9.82 0 0121.82 12 9.82 9.82 0 0112 21.82z"/></svg>
              <span class="tr">WhatsApp Chat</span>
            </a>
          </li>
          <li>
            <a href="tel:{{site.phone}}" class="text-green-600 hover:text-green-700 font-medium inline-flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
              <span>{{site.phone}}</span>
            </a>
          </li>
          <li>
            <a href="mailto:{{site.email}}" class="text-green-600 hover:text-green-700 font-medium inline-flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              <span>{{site.email}}</span>
            </a>
          </li>
        </ul>

        <div class="mt-5 pt-4 border-t border-orange-100 text-xs text-stone-500">
          <p class="tr">We respond within a few hours during business hours. For urgent care needs, please call or WhatsApp us directly.</p>
        </div>
      </div>
    </div>
  </div>
</div>
