<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{meta_title}}</title>
  <meta name="description" content="{{meta_description}}">
  {% partial "_og" %}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700;900&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com?plugins=typography"></script>
  <style>
/* Serif headings */
h1, h2, h3, .font-serif {
  font-family: 'Merriweather', Georgia, serif;
}

/* Smooth scroll */
html {
  scroll-behavior: smooth;
}

/* Mobile nav */
.nav-menu {
  transition: max-height 0.3s ease, opacity 0.3s ease;
  max-height: 0;
  opacity: 0;
  overflow: hidden;
}
.nav-menu.open {
  max-height: 500px;
  opacity: 1;
}
@media (min-width: 768px) {
  .nav-menu {
    max-height: none;
    opacity: 1;
    overflow: visible;
  }
}

/* Fade-in on scroll */
.fade-in {
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.6s ease, transform 0.6s ease;
}
.fade-in.visible {
  opacity: 1;
  transform: translateY(0);
}

/* FAQ accordion */
.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}
.faq-answer.open {
  max-height: 500px;
}

/* CTA pulse */
@keyframes pulse-amber {
  0%, 100% { box-shadow: 0 0 0 0 rgba(245, 158, 11, 0.4); }
  50% { box-shadow: 0 0 0 8px rgba(245, 158, 11, 0); }
}
.btn-pulse {
  animation: pulse-amber 2s infinite;
}
  </style>
</head>
<body class="bg-stone-50 text-stone-800 antialiased">
  {% partial "_nav" %}
  <main>
    {{body}}
  </main>
  {% partial "_footer" %}
  <script>
    // FAQ accordion
    document.querySelectorAll('[data-faq]').forEach(btn => {
      btn.addEventListener('click', () => {
        const answer = btn.nextElementSibling;
        const icon = btn.querySelector('[data-faq-icon]');
        answer.classList.toggle('open');
        if (icon) icon.textContent = answer.classList.contains('open') ? 'âˆ’' : '+';
      });
    });
    // Mobile nav
    const navToggle = document.getElementById('nav-toggle');
    const navMenu = document.getElementById('nav-menu');
    if (navToggle && navMenu) {
      navToggle.addEventListener('click', () => navMenu.classList.toggle('open'));
    }
    // Mobile pests sub-menu
    const pestsToggle = document.getElementById('mobile-pests-toggle');
    const pestsMenu = document.getElementById('mobile-pests-menu');
    const pestsIcon = document.getElementById('mobile-pests-icon');
    if (pestsToggle && pestsMenu) {
      pestsToggle.addEventListener('click', () => {
        pestsMenu.classList.toggle('hidden');
        if (pestsIcon) pestsIcon.style.transform = pestsMenu.classList.contains('hidden') ? '' : 'rotate(180deg)';
      });
    }
    // Fade-in on scroll
    const obs = new IntersectionObserver(entries => {
      entries.forEach(e => { if (e.isIntersecting) { e.target.classList.add('visible'); obs.unobserve(e.target); }});
    }, { threshold: 0.1 });
    document.querySelectorAll('.fade-in').forEach(el => obs.observe(el));
  </script>
</body>
</html>