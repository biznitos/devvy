<section class="py-16 md:py-24">
  <div class="max-w-md mx-auto px-6">
    <div class="text-center mb-10">
      <h2 class="tr font-serif font-light text-3xl tracking-tight text-ink">Sign In</h2>
      <div class="w-12 h-px bg-copper-400 mx-auto mt-6"></div>
    </div>
    <form action="/api/auth" method="post" class="space-y-6">
      <input type="hidden" name="return_url" value="/">
      <input type="hidden" name="failure_url" value="/login?error=1">
      <div>
        <label for="login-email" class="tr block text-xs font-medium uppercase tracking-[0.15em] text-ink-soft mb-2">Email</label>
        <input type="email" id="login-email" name="email" required class="w-full px-4 py-3 border border-black/15 bg-white text-ink text-sm focus:outline-none focus:border-copper-400 transition-colors">
      </div>
      <div>
        <label for="login-password" class="tr block text-xs font-medium uppercase tracking-[0.15em] text-ink-soft mb-2">Password</label>
        <input type="password" id="login-password" name="password" required class="w-full px-4 py-3 border border-black/15 bg-white text-ink text-sm focus:outline-none focus:border-copper-400 transition-colors">
      </div>
      <div class="text-center">
        <button type="submit" class="tr inline-block bg-copper-400 text-white text-xs font-medium uppercase tracking-[0.2em] px-10 py-4 rounded-none hover:bg-copper-300 transition-colors duration-300 cursor-pointer w-full">Sign In</button>
      </div>
    </form>
  </div>
</section>
