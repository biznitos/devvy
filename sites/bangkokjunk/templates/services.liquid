<!-- Hero -->
<section class="bg-slate_d-600 py-14 md:py-24">
  <div class="max-w-4xl mx-auto px-6 md:px-12 text-center">
    <div class="w-10 h-px bg-copper-400 mx-auto mb-8"></div>
    <h1 class="tr font-serif font-light text-3xl md:text-5xl tracking-tight text-white">Junk Removal Services in Bangkok</h1>
    <p class="tr mt-6 text-lg text-white/70 max-w-2xl mx-auto">From single items to full property clearouts, anything you need gone gets removed.</p>
  </div>
</section>

<!-- Services Grid -->
{% posts type:"category", limit:20, name:"all_services", order:"alpha" %}
{% if all_services.size > 0 %}
<section class="py-24 md:py-32">
  <div class="max-w-5xl mx-auto px-6 md:px-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for p in all_services %}
      <a href="{{p.permalink}}" class="group block bg-white border border-black/15 rounded-none overflow-hidden transition-all duration-500 hover:-translate-y-1 hover:shadow-[0_4px_20px_rgba(0,0,0,0.06)]">
        <div class="overflow-hidden">
          <img src="{{p.cover_image | resize: '400x300'}}" alt="{{p.title}}" class="w-full h-48 object-cover transition-transform duration-700 ease-out group-hover:scale-105" loading="lazy">
        </div>
        <div class="p-6">
          <h2 class="font-serif text-xl font-normal text-ink">{{p.title}}</h2>
          <p class="text-ink-soft mt-3 text-sm leading-relaxed">{{p.description | truncate: 120}}</p>
          <span class="tr inline-block mt-4 text-copper-400 text-xs font-medium uppercase tracking-[0.2em]">Learn More</span>
        </div>
      </a>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

