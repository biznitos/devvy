<!-- Fallback content template -->
<section class="bg-slate_d-600 py-14 md:py-24">
  <div class="max-w-4xl mx-auto px-6 md:px-12 text-center">
    <div class="w-10 h-px bg-copper-400 mx-auto mb-8"></div>
    <h1 class="tr font-serif font-light text-3xl md:text-5xl tracking-tight text-white">{{post.title}}</h1>
    {% if post.description %}
    <p class="tr mt-6 text-lg text-white/70 max-w-2xl mx-auto">{{post.description}}</p>
    {% endif %}
  </div>
</section>

<div class="bg-warm-100 py-3">
  <div class="max-w-5xl mx-auto px-6 md:px-12 text-xs text-ink-muted">
    <a href="/" class="hover:text-copper-400 transition-colors">Home</a>
    <span class="mx-2">/</span>
    <span class="text-ink-soft">{{post.title}}</span>
  </div>
</div>

<section class="py-16 md:py-24">
  <div class="max-w-3xl mx-auto px-6 md:px-12">
    {% if post.cover_image %}
    <img src="{{post.cover_image}}" alt="{{post.title}}" class="w-full rounded-lg mb-12" loading="lazy">
    {% endif %}
    <div class="prose prose-lg max-w-none prose-headings:font-serif prose-headings:font-light prose-headings:tracking-tight prose-headings:text-ink prose-p:text-ink-soft prose-p:leading-relaxed prose-a:text-copper-400 prose-a:no-underline hover:prose-a:text-copper-300">
      {{post.content}}
    </div>
  </div>
</section>
