<!-- Hero -->
<section class="bg-slate_d-600 py-14 md:py-24">
  <div class="max-w-4xl mx-auto px-6 md:px-12 text-center">
    <div class="w-10 h-px bg-copper-400 mx-auto mb-8"></div>
    <h1 class="tr font-serif font-light text-3xl md:text-5xl tracking-tight text-white">Get in Touch</h1>
    <p class="tr mt-6 text-lg text-white/70">Reach out for a free quote or any questions about the service.</p>
  </div>
</section>

<section class="py-16 md:py-24">
  <div class="max-w-5xl mx-auto px-6 md:px-12">
    <div class="grid md:grid-cols-2 gap-16">

      <!-- Contact Info -->
      <div>
        <h2 class="tr font-serif font-light text-2xl tracking-tight text-ink mb-8">Get in Touch</h2>

        <div class="space-y-6">
          <div>
            <p class="tr text-xs font-medium uppercase tracking-[0.15em] text-copper-400 mb-2">Phone</p>
            <a href="tel:+66827973702" class="text-ink text-lg hover:text-copper-400 transition-colors">082-797-3702</a>
          </div>
          <div>
            <p class="tr text-xs font-medium uppercase tracking-[0.15em] text-copper-400 mb-2">LINE</p>
            <a href="https://line.me/R/ti/p/@khunclean" class="text-ink text-lg hover:text-[#06C755] transition-colors">@khunclean</a>
          </div>
          <div>
            <p class="tr text-xs font-medium uppercase tracking-[0.15em] text-copper-400 mb-2">WhatsApp</p>
            <a href="https://wa.me/66827973702" class="text-ink text-lg hover:text-[#25D366] transition-colors">082-797-3702</a>
          </div>
          <div>
            <p class="tr text-xs font-medium uppercase tracking-[0.15em] text-copper-400 mb-2">Email</p>
            <a href="mailto:{{site.email}}" class="text-ink text-lg hover:text-copper-400 transition-colors">{{site.email}}</a>
          </div>
          <div>
            <p class="tr text-xs font-medium uppercase tracking-[0.15em] text-copper-400 mb-2">Service Area</p>
            <p class="tr text-ink-soft text-sm leading-relaxed">Bangkok, Samut Prakan, and Nonthaburi. All districts covered including Sukhumvit, Thonglor, Silom, Sathorn, and more.</p>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div>
        <h2 class="tr font-serif font-light text-2xl tracking-tight text-ink mb-8">Send a Message</h2>
        <form action="/api/lead/v1" method="post" class="space-y-5">
          <input type="hidden" name="type" value="contact">
          <input type="hidden" name="title" value="Contact Form">
          <input type="hidden" name="return_url" value="/thank-you">
          <input type="hidden" name="failure_url" value="/contact?error=1">
          <div>
            <label class="tr block text-xs font-medium uppercase tracking-[0.15em] text-ink-soft mb-2">Name</label>
            <input type="text" name="customer[name]" required class="w-full px-4 py-3 border border-black/15 bg-white text-ink text-sm focus:outline-none focus:border-copper-400 transition-colors">
          </div>
          <div>
            <label class="tr block text-xs font-medium uppercase tracking-[0.15em] text-ink-soft mb-2">Email</label>
            <input type="email" name="customer[email]" required class="w-full px-4 py-3 border border-black/15 bg-white text-ink text-sm focus:outline-none focus:border-copper-400 transition-colors">
          </div>
          <div>
            <label class="tr block text-xs font-medium uppercase tracking-[0.15em] text-ink-soft mb-2">Phone</label>
            <input type="tel" name="customer[phone]" class="w-full px-4 py-3 border border-black/15 bg-white text-ink text-sm focus:outline-none focus:border-copper-400 transition-colors">
          </div>
          <div>
            <label class="tr block text-xs font-medium uppercase tracking-[0.15em] text-ink-soft mb-2">Message</label>
            <textarea name="notes" rows="5" class="w-full px-4 py-3 border border-black/15 bg-white text-ink text-sm focus:outline-none focus:border-copper-400 transition-colors resize-vertical"></textarea>
          </div>
          <button type="submit" class="tr inline-block bg-copper-400 text-white text-xs font-medium uppercase tracking-[0.2em] px-10 py-4 rounded-none hover:bg-copper-300 transition-colors duration-300 cursor-pointer">Send Message</button>
        </form>
      </div>

    </div>
  </div>
</section>
