<!-- Hero -->
<section class="bg-slate_d-600 py-14 md:py-24">
  <div class="max-w-4xl mx-auto px-6 md:px-12 text-center">
    <div class="w-10 h-px bg-copper-400 mx-auto mb-8"></div>
    <h1 class="tr font-serif font-light text-3xl md:text-5xl tracking-tight text-white">Recent Jobs & Case Studies</h1>
    <p class="tr mt-6 text-lg text-white/70 max-w-2xl mx-auto">Real removal jobs across Bangkok. See what gets done and how it works.</p>
  </div>
</section>

{% posts type:"blog", limit:20, name:"blog_posts", order:"pubdate" %}
{% if blog_posts.size > 0 %}
<section class="py-24 md:py-32">
  <div class="max-w-5xl mx-auto px-6 md:px-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for p in blog_posts %}
      <a href="{{p.permalink}}" class="group block bg-white border border-black/15 rounded-none overflow-hidden transition-all duration-500 hover:-translate-y-1 hover:shadow-[0_4px_20px_rgba(0,0,0,0.06)]">
        <div class="overflow-hidden">
          <img src="{{p.cover_image | resize: '400x300'}}" alt="{{p.title}}" class="w-full h-52 object-cover transition-transform duration-700 ease-out group-hover:scale-105" loading="lazy">
        </div>
        <div class="p-6">
          <p class="text-xs font-medium uppercase tracking-[0.15em] text-ink-muted">{{p.pubdate | date: "%B %d, %Y"}}</p>
          <h2 class="font-serif text-lg font-normal text-ink mt-2">{{p.title}}</h2>
          <p class="text-ink-soft mt-2 text-sm leading-relaxed">{{p.description | truncate: 100}}</p>
        </div>
      </a>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}
