<div class="bg-slate_d-600 py-16 px-6">
  <div class="max-w-2xl mx-auto">
    <div class="text-center mb-10">
      <span class="tr text-xs font-medium uppercase tracking-[0.2em] text-copper-400">Free Quote</span>
      <h3 class="tr mt-4 font-serif font-light text-2xl md:text-3xl tracking-tight text-white">Request a Pickup Quote</h3>
      <div class="w-12 h-px bg-copper-400 mx-auto mt-6"></div>
    </div>
    <form action="/api/lead/v1" method="post" class="space-y-5">
      <input type="hidden" name="type" value="quote">
      <input type="hidden" name="title" value="Quote Request{% if post %}: {{post.title}}{% endif %}">
      <input type="hidden" name="return_url" value="/thank-you">
      <input type="hidden" name="failure_url" value="{{path_info}}?error=1">
      {% if post %}<input type="hidden" name="data[service]" value="{{post.title}}">{% endif %}
      <div class="grid md:grid-cols-2 gap-5">
        <div>
          <label class="tr block text-xs font-medium uppercase tracking-[0.15em] text-white/60 mb-2">Name</label>
          <input type="text" name="customer[name]" required class="w-full px-4 py-3 bg-transparent border border-white/20 text-white text-sm focus:outline-none focus:border-copper-400 transition-colors placeholder-white/30">
        </div>
        <div>
          <label class="tr block text-xs font-medium uppercase tracking-[0.15em] text-white/60 mb-2">Phone</label>
          <input type="tel" name="customer[phone]" class="w-full px-4 py-3 bg-transparent border border-white/20 text-white text-sm focus:outline-none focus:border-copper-400 transition-colors placeholder-white/30">
        </div>
      </div>
      <div>
        <label class="tr block text-xs font-medium uppercase tracking-[0.15em] text-white/60 mb-2">Email</label>
        <input type="email" name="customer[email]" required class="w-full px-4 py-3 bg-transparent border border-white/20 text-white text-sm focus:outline-none focus:border-copper-400 transition-colors placeholder-white/30">
      </div>
      <div>
        <label class="tr block text-xs font-medium uppercase tracking-[0.15em] text-white/60 mb-2">What do you need removed?</label>
        <textarea name="notes" rows="3" class="w-full px-4 py-3 bg-transparent border border-white/20 text-white text-sm focus:outline-none focus:border-copper-400 transition-colors resize-vertical placeholder-white/30"></textarea>
      </div>
      <div class="text-center">
        <button type="submit" class="tr inline-block bg-copper-400 text-slate_d-600 text-xs font-medium uppercase tracking-[0.2em] px-10 py-4 rounded-none hover:bg-copper-300 transition-colors duration-300 cursor-pointer">Get Free Quote</button>
      </div>
    </form>
  </div>
</div>
