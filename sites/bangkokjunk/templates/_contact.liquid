<section class="py-16 md:py-24">
  <div class="max-w-2xl mx-auto px-6 md:px-12">
    <div class="text-center mb-12">
      <span class="tr text-xs font-medium uppercase tracking-[0.2em] text-copper-400">Get in Touch</span>
      <h2 class="tr mt-4 font-serif font-light text-3xl md:text-4xl tracking-tight text-ink">Get in Touch</h2>
      <div class="w-12 h-px bg-copper-400 mx-auto mt-6"></div>
    </div>
    <form action="/api/lead/v1" method="post" class="space-y-6">
      <input type="hidden" name="type" value="contact">
      <input type="hidden" name="title" value="Contact Form">
      <input type="hidden" name="return_url" value="/thank-you">
      <input type="hidden" name="failure_url" value="/contact?error=1">
      <div>
        <label for="contact-name" class="tr block text-xs font-medium uppercase tracking-[0.15em] text-ink-soft mb-2">Name</label>
        <input type="text" id="contact-name" name="customer[name]" required class="w-full px-4 py-3 border border-black/15 bg-white text-ink text-sm focus:outline-none focus:border-copper-400 transition-colors">
      </div>
      <div>
        <label for="contact-email" class="tr block text-xs font-medium uppercase tracking-[0.15em] text-ink-soft mb-2">Email</label>
        <input type="email" id="contact-email" name="customer[email]" required class="w-full px-4 py-3 border border-black/15 bg-white text-ink text-sm focus:outline-none focus:border-copper-400 transition-colors">
      </div>
      <div>
        <label for="contact-phone" class="tr block text-xs font-medium uppercase tracking-[0.15em] text-ink-soft mb-2">Phone</label>
        <input type="tel" id="contact-phone" name="customer[phone]" class="w-full px-4 py-3 border border-black/15 bg-white text-ink text-sm focus:outline-none focus:border-copper-400 transition-colors">
      </div>
      <div>
        <label for="contact-message" class="tr block text-xs font-medium uppercase tracking-[0.15em] text-ink-soft mb-2">Message</label>
        <textarea id="contact-message" name="notes" rows="5" class="w-full px-4 py-3 border border-black/15 bg-white text-ink text-sm focus:outline-none focus:border-copper-400 transition-colors resize-vertical"></textarea>
      </div>
      <div class="text-center">
        <button type="submit" class="tr inline-block bg-copper-400 text-white text-xs font-medium uppercase tracking-[0.2em] px-10 py-4 rounded-none hover:bg-copper-300 transition-colors duration-300 cursor-pointer">Send Message</button>
      </div>
    </form>
  </div>
</section>
